@import "../variables"

.umc .umcMultiInput
	// reduce spacing between rows
	.umcMultiInputContainer .umcLabelPane
		padding-bottom: var(--layout-spacing-unit)


	// align add row button to row indention
	.umcMultiInputAddButton
		margin: 0 0 0 $labelpane-padding-left


	// hide all labels or all but the first row's labels
	&.umcMultiInput--onlyFirstRowLabels
		.umcMultiInputContainer:not(:first-child) .umcLabelPane .umcLabelPaneLabelNode
			display: none
	&.umcMultiInput--noRowLabels
		.umcMultiInputContainer .umcLabelPane .umcLabelPaneLabelNode
			display: none


	/* add a padding to the last element of a row */
	/* and remove the padding when MultiInput is disabled */
	.umcMultiInputContainer .umcMultiInputLastRowEntry
		$layoutrow--make-space-for-buttons(1)

	&Disabled
		.umcMultiInputContainer .umcMultiInputLastRowEntry
			padding-right: 0
