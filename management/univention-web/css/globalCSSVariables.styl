:root
	// new vars
	--bgc-loading-circle: var(--font-color-contrast-middle)
	--bgc-user-menu-item-hover: rgba(255, 255, 255, 0.1)
	--bgc-user-menu-item-active: rgba(255, 255, 255, 0.2)
	--bgc-header-number-circle: var(--color-grey62)
	--bgc-tab-seperator: var(--color-grey25)
	--bgc-popup: var(--color-grey25)
	--bgc-popup-item-hover: rgba(0, 0, 0, 0.15)
	--bgc-popup-item-active: rgba(0, 0, 0, 0.3)
	--bgc-popup-item-selected: rgba(0, 0, 0, 0.3)
	--bgc-grid-row-hover: rgba(255, 255, 255, 0.04)
	--bgc-grid-row-selected: var(--bgc-grid-row-hover)
	--bgc-tree-row-hover: var(--bgc-grid-row-hover)
	--bgc-tree-row-selected: rgba(255, 255, 255, 0.15)
	--bgc-appcenter-app-hover: rgba(255, 255, 255, 0.08)
	--bgc-appcenter-app-active: rgba(255, 255, 255, 0.12)
	--bgc-titlepane-hover: rgba(255, 255, 255, 0.04)
	--popup-border: 1px solid var(--color-grey62)
	--serveroverview-tile-hover-bgc: #00ACB6
	--serveroverview-tile-hover-color: #1e1e1d

	// colors
	--color-primary:   #7AB51D
	--color-primary-rgb: red(@--color-primary), green(@--color-primary), blue(@--color-primary)
	--color-grey0:     #1E1E1D
	--color-grey0-rgb: red(@--color-grey0), green(@--color-grey0), blue(@--color-grey0)
	--color-grey8:     #333331
	--color-grey8-rgb: red(@--color-grey8), green(@--color-grey8), blue(@--color-grey8)
	--color-grey25:    #5F5F5C
	--color-grey40:    #868681
	--color-grey40-rgb: red(@--color-grey40), green(@--color-grey40), blue(@--color-grey40)
	--color-grey62:    #BDBDBB
	--color-white:     #FFF
	--color-black:     #000
	--color-error:     #DD042D
	--color-success:   #5C8916

	--color-matched-text: var(--color-grey25) // Background color of text in ComboBox drop down that matches typed in phrase

	// header
	--layout-height-header: 3rem
	--layout-height-header-seperator: var(--layout-spacing-unit-small)
	--bgc-content-header: var(--color-grey0)

	// body
	--bgc-content-body:      var(--color-grey8)
	--bgc-content-container: var(--color-grey0)

	// fonts
	--font-size-1: 1.5rem // font-size-h1 // font-size-h5
	--font-size-2: 1.25rem // font-size-h2 // font-size-h6
	--font-size-3: 1rem  // font-size-input // font-size-subtitle1
	--font-size-4: 0.875rem // font-size-normal // font-size-body2
	--font-size-5: 0.75rem // font-size-detail // font-size-caption

	--font-size-html:   1rem
	--font-size-body: var(--font-size-4)

	--font-color-contrast-high: var(--color-white)
	--font-color-contrast-middle: var(--color-grey62)
	--font-color-contrast-low: var(--color-grey40)
	--font-color-dark: var(--color-black)
	--font-lineheight-normal: 1.5
	--font-lineheight-compact: 1.25
	--font-lineheight-header: 1.3
	--font-weight-bold: 600

	// cursors
	--cursor-disabled: not-allowed

	// border-radius
	--border-radius-interactable: 0.25rem // 5px
	--border-radius-container: 0.5rem // 10px
	--border-radius-notification: var(--border-radius-container)
	--border-radius-tooltip: 0.25rem // 5px
	--border-radius-circles: 50%
	--border-radius-apptile: 12.5% // 20px
	--border-radius-apptile-in-folder: 12.5% // 5px
	--border-radius-apptile-in-tab: 12.5% // 2px
	--border-radius-portal-folder: 10%

	// layout
	--layout-spacing-unit: 0.5rem
	--layout-spacing-unit-small: calc(var(--layout-spacing-unit) / 2)

	// buttons
	--button-size: 36px
	--button-icon-size: 16px
	--button-font-size: var(--font-size-4)
	--button-border-radius: var(--border-radius-interactable)
	--button-icon-border-radius: var(--border-radius-circles)
	--button-bgc-transition: background 250ms
	--button-icon-bgc: transparent
	--button-icon-bgc-hover: var(--color-grey8)
	--button-icon-bgc-active: blend(rgba(0, 0, 0, 0.08), @--color-grey8)
	--button-icon-bgc-disabled: transparent
	--button-icon-highlighted-bgc: var(--inputfield-dark-bgc)
	--button-icon-highlighted-bgc-hover: var(--color-grey25)
	--button-icon-highlighted-bgc-active: blend(rgba(0, 0, 0, 0.08), @--color-grey25)
	--button-icon-highlighted-bgc-disabled: transparent
	--button-primary-bgc: #5e881d
	--button-primary-bgc-hover: blend(rgba(0, 0, 0, 0.08), @--button-primary-bgc)
	--button-primary-bgc-active: blend(rgba(0, 0, 0, 0.16), @--button-primary-bgc)
	--button-primary-bgc-disabled: var(--color-grey25)
	--button-bgc: var(--color-grey25)
	--button-bgc-hover: blend(rgba(0, 0, 0, 0.08), @--color-grey25)
	--button-bgc-active: blend(rgba(0, 0, 0, 0.16), @--color-grey25)
	--button-bgc-disabled: var(--color-grey25)
	--button-text-bgc: transparent
	--button-text-bgc-hover: var(--color-grey8)
	--button-text-bgc-active: blend(rgba(0, 0, 0, 0.08), @--color-grey8)
	--button-text-bgc-disabled: transparent

	// input fields
	--inputfield-size: 2.75rem
	--inputfield-bgc: var(--bgc-content-body)
	--inputfield-dark-bgc: var(--bgc-content-container)

	// shadows
	--box-shadow: 0px 3px 6px rgba(0, 0, 0, 0.16)
