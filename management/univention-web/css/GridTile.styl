@require "variables.styl"

.umcGridTile .dgrid
	clear: both
	border: none

.umcGridTile .dgrid-scroller
	max-height: inherit

.umcGridTile .dgrid-header
	display: none

.umcGridTile .dgrid-preload
	clear: both

.umcGridTile
	.umcGridStatus
		height: 60px
		line-height: @height
		text-align: center
		float: right
		font-size: 12px
		color: rgba(0, 0, 0, 0.54)
		padding-right: 23px

	.umcGridHeader
		padding-bottom: 10px
		float: left

		.dijitIcon
			display: none

	.umcGridTileWrapperItem
		padding: var(--layout-spacing-unit)
		&.dgrid-selected
			background-color: transparent

	.umcGridTileItem
		--local-border-color: transparent
		position: relative
		outline: none
		padding: calc(2 * var(--layout-spacing-unit))
		background-color: s('rgba(var(--color-grey0-rgb), 0.8)')
		transition: background-color 0.25s, border 0.25s
		box-shadow: var(--box-shadow)
		border: 1px solid var(--local-border-color)
		border-radius: var(--border-radius-container)
		font-size: var(--font-size-small)
		display: grid
		grid-template-columns: auto 1fr
		grid-template-rows: auto 1fr
		grid-template-areas: "icon name" "icon description"
		grid-gap: var(--layout-spacing-unit) @padding
		cursor: pointer

		&:hover
			--local-border-color: var(--color-grey40)

		.umcGridTileName
			font-weight: 600
			word-break: break-word
			grid-area: name

		.umcGridTileDescription
			grid-area: description

		.umcGridTileDescription > div,
		.umcGridTileName
			overflow: hidden
			text-overflow: ellipsis
			white-space: nowrap

		.umcGridTileName,
		.umcGridTileDescription
			overflow: hidden

		.umcGridTileIcon
			align-self: center
			grid-area: icon
			height: 80px
			width: 80px
			border-radius: var(--border-radius-circles)
			color: var(--font-color-contrast-high)
			font-size: var(--font-size-header1)
			font-weight: 600
			background: var(--color-grey8)
			background-size: cover
			background-position: center center
			background-repeat: no-repeat
			display: flex
			align-items: center
			justify-content: center

		.umcGridTileContextIcon
			position: absolute
			top: var(--layout-spacing-unit)
			right: var(--layout-spacing-unit)


// no left/right padding for full size item
@media (max-width: $xxs-max)
	.umcGridTile .umcGridTileWrapperItem
		padding-left: 0
		padding-right: 0
