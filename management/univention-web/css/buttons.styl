@require "HTMLElements.styl"

//// overarching button styling
.ucsButton
	--bgc: transparent
	--bgc-state: transparent
	--button-size: var(--g-button-size)
	--button-iconSize: 1rem
	margin: 0
	font-size: var(--button-font-size)
	border-radius: var(--button-border-radius)
	background-color: var(--bgc)
	transition: opacity 250ms

.dijitButtonNode
	border: none
	border-radius: inherit
	display: flex
	align-items: center // mainly for umc/widgets/NumberSpinner arrows
	justify-content: center
	transition: var(--button-bgc-transition)
	background-color: var(--bgc-state)

.dijitButtonContents
	height: var(--button-size)
	display: flex
	align-items: center
	justify-content: center

.dijitButtonText
	color: var(--font-color-contrast-high)
	font-weight: 600
	text-transform: uppercase


//// specific button styling
// umc/widgets/DropDownButton
.dijitDropDownButton .dijitArrowButtonInner
	display: none

//// button types
.ucsNormalButton
	--bgc: var(--button-bgc)
	--bgc-state: transparent
	&.dijit
		&Hover,
		&Focused
			--bgc-state: var(--button-bgc-overlay-hover)
		&Active
			--bgc-state: var(--button-bgc-overlay-active)
		&Disabled
			--bgc-state: var(--button-bgc-overlay-disabled)
			opacity: 0.4

.ucsPrimaryButton
	--bgc: var(--button-primary-bgc)
	--bgc-state: transparent
	&.dijit
		&Hover,
		&Focused
			--bgc-state: var(--button-primary-bgc-overlay-hover)
		&Active
			--bgc-state: var(--button-primary-bgc-overlay-active)
		&Disabled
			--bgc-state: var(--button-primary-bgc-overlay-disabled)
			opacity: 0.4

.ucsTextButton
	--bgc: var(--button-text-bgc)
	--bgc-state: transparent
	&.dijit
		&Hover,
		&Focused
			--bgc-state: var(--button-text-bgc-overlay-hover)
		&Active
			--bgc-state: var(--button-text-bgc-overlay-active)
		&Disabled
			--bgc-state: transparent
			opacity: 0.4

	.dijitButtonContents
		padding: 0 0.5rem

.ucsPrimaryButton,
.ucsNormalButton
	box-shadow: var(--box-shadow)

.ucsPrimaryButton,
.ucsNormalButton,
.ucsTextButton
	.featherIcon
		margin-right: 0.4rem

.ucsPrimaryButton,
.ucsNormalButton,
.ucsTextButton,
.ucsIconButton,
.ucsSimpleIconButton,
.ucsFillButton
	.featherIcon
		width: var(--button-iconSize)
		height: @width

.ucsPrimaryButton,
.ucsNormalButton
	.dijitButtonContents
		padding: 0 1rem

.ucsSimpleIconButton
	--bgc: transparent
	--bgc-state: transparent
	--button-size: 2rem
	--button-iconSize: 1rem
	width: var(--button-size)
	height: var(--button-size)
	cursor: pointer
	display: flex
	align-items: center
	justify-content: center
	background-color: var(--bgc-state)
	border-radius: var(--button-icon-border-radius)
	transition: var(--button-bgc-transition)

	&:hover,
	&:focus
		--bgc-state: var(--button-icon-bgc-overlay-hover)
	&:active
		--bgc-state: var(--button-icon-bgc-overlay-active)

.ucsIconButton
	--bgc: transparent
	--bgc-state: transparent
	box-shadow: none
	&.dijit
		&Hover,
		&Focused
			--bgc-state: var(--button-icon-bgc-overlay-hover)
		&Active
			--bgc-state: var(--button-icon-bgc-overlay-active)
		&Disabled
			--bgc-state: var(--button-icon-bgc-overlay-disabled)
			opacity: 0.4

	border-radius: var(--button-icon-border-radius)

	.dijitButtonContents
		width: var(--button-size)
	&ToFontSize
		--button-size: 1em

.ucsIconButtonHighlighted
	@extends .ucsIconButton
	--bgc: var(--button-icon-highlighted-bgc)
	&.dijit
		&Hover,
		&Focused,
		&Active,
		&Disabled
			--bgc: transparent


.ucsFillButton
	--bgc: var(--button-bgc)
	--bgc-state: transparent
	&.dijit
		&Hover,
		&Focused
			--bgc-state: var(--button-bgc-overlay-hover)
		&Active
			--bgc-state: var(--button-bgc-overlay-active)
		&Disabled
			--bgc-state: var(--button-bgc-overlay-disabled)
			opacity: 0.4

	&,
	.dijitButtonNode
		width: 100%
		height: 100%


.ucsLinkButton
	--button-size: auto

	.dijitButtonText
		text-transform: none
		@extends a


.ucsButton--textfieldAligned
	position: relative
	bottom: s('calc((var(--inputfield-size) - var(--g-button-size)) / 2)')

//// misc
.dijitUploader input
	cursor: pointer


.ucsButton:not(.ucsNormalButton):not(.ucsTextButton):not(.ucsPrimaryButton):not(.ucsIconButton):not(.ucsIconButtonHighlighted):not(.ucsLinkButton):not(.ucsMenuButton):not(.umcCategoryButton):not(.ucsFillButton)
	@extends .ucsNormalButton
