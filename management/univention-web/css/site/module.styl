@require "../variables.styl"

// seperation line between module header and content when scrolling
.umcModuleHeader
	transition: border-color 0.2s
	--local-border-color: transparent
	border-bottom: 1px solid var(--local-border-color)
.umcModule--scrolled .umcModuleHeader
	--local-border-color: var(--color-grey25)


.umcModuleHeaderOuterContainer
	padding: spacing(3) 0

.umcModuleHeaderWrapper
	display: flex
	align-items: flex-start
	flex-wrap: wrap
	grid-gap: spacing(1) 0

.umcModuleHeaderRight
	flex: 1 1 auto
	min-width: 0%
	text-align: right

.umcModuleTitle
	@extends h1
	display: flex
	align-items: center

.umcModuleTitleBreadCrumb
	color: var(--font-color-contrast-low)

.umcModuleTitleBreadCrumbSeperator
	margin: 0 spacing(1, true)

.umcModuleSubTitle
	font-size: var(--font-size-small)
	margin-top: spacing(1)

.umc .umcModuleWrapper
	margin: 0 auto
	padding: 0


// helpText font-size
.umc .umcPageHelpText
	font-size: var(--font-size-small)


// headerText/helpText spacing
.umc .umcPageHeader + .umcPageHelpText
	margin-top: spacing(1)
.umc .umcPageHelpText:not(:last-child)
	margin-bottom: spacing(3)
.umc .umcPageNavContent:last-child
	margin-bottom: spacing(3)


// UDM module spacing
.umc .umcUDMDetailPage
	.umcPageMainContent
		background-color: var(--bgc-content-container)
		border-radius: var(--border-radius-container)

	.umcPageHeader h2
		@extends h1
	.umcPageHeader
		padding: spacing(4)
	.umcPageHelpText
		margin: 0
		padding: 0 spacing(4) spacing(3)

	.dijitTitlePane
		border-radius: 0
		border-top: 2px solid var(--bgc-content-body)
		margin-bottom: 0

		.dijitTitlePane
			border-top: 0

.umc .umcSetupNetworkPage,
.umc .umcAppCenterRepositorySettingsPage
	.umcGrid
		background-color: var(--bgc-content-body)

.umc .umcSetupNetworkPage,
.umc .umcSetupCertificatePage,
.umc .umcSetupLanguagePage,
.umc .umcAppCenterRepositorySettingsPage,
.umc .umcAppCenterRepositoryDetailsPage,
.umc .umcUpdatesPage
	.umcPageMainContent
		background-color: var(--bgc-content-container)
		border-radius: var(--border-radius-container)
		overflow: hidden
		margin-bottom: spacing(4)

	.dijitTitlePane
		border-radius: 0
		border-top: 2px solid var(--bgc-content-body)
		margin-bottom: 0

		.dijitTitlePane
			border-top: 0

.umc .umcSetupInterfaceWizard
	border-radius: var(--border-radius-container)

	.umcSetupInterfaceWizard__networkPage
		.umcPageMainContent
			background-color: var(--bgc-content-body)
			border-radius: var(--border-radius-container)
			overflow: hidden

		.dijitTitlePane
			background-color: var(--bgc-content-body)
			border-radius: 0
			border-top: 2px solid var(--bgc-content-body)
			margin-bottom: 0
			--inputfield-bgc: var(--bgc-content-container)

			.dijitTitlePane
				border-top: 0
