@require "../variables.styl"

.umc .umcContainerWidget:last-child > .umcLabelPane .umcMultiInput
	margin-bottom: 0

.umc .umcLabelPane .umcTooltipIcon
	span.umcHelpIcon
		opacity: 0.6

	&:hover span.umcHelpIcon
		background-position: -60px -200px

	&:active span.umcHelpIcon
		background-position: -60px -200px
		opacity: 1

.umc .umcLiveSearchSidebarRadioButtonGroup
	margin-top: 1.5em

.umc .umcProgressBar,
.umc .umcProgressInfo
	width: 460px
	min-height: 150px
	> *
		width: 100%

.umc .umcProgressDetails
	display: grid
	grid-template-columns: auto 4ch
	grid-gap: 0 spacing(1, true)
	margin-top: spacing(2)

	.umcProgressPercentage
		color: var(--font-color-contrast-middle)
		font-size: var(--font-size-4);
		justify-self: flex-end

.umc .umcProgressBar
	background-color: var(--bgc-content-container)
	border-radius: var(--border-radius-container);
	padding: spacing(2)
	overflow: visible

	.umcProgressBarComponent
		height: calc(2 * 1em * var(--font-lineheight-normal))
		display: flex
		align-items: flex-end
		font-size: var(--font-size-2);
		font-weight: var(--font-weigt-bold)
		margin-bottom: spacing(2)

	.umcProgressBarComponentContent
		min-height: 100%

	.umcProgressBarMessage
		height: calc(3 * 1em * var(--font-lineheight-normal))
		font-size: var(--font-size-4);
		color: var(--font-color-contrast-middle)
