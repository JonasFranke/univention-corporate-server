@import "../variables"

.umc .umcMultiInput
	margin-bottom: 1.5em

	.umcMultiInputContainer
		position: relative

	/* add a padding to the last element of a row */
	.umcMultiInputContainer .umcMultiInputLastRowEntry
		$layoutrow--make-space-for-buttons(1)

	.umcMultiInputRemoveButton
		padding: $labelpane-padding
		position: relative
		bottom: $layoutrow-button-bottom
		margin: 0

	.umcMultiInputAddButton
		margin: 0 0 0 $labelpane-padding-left

.umc .umcContainerWidget:last-child > .umcLabelPane .umcMultiInput
	margin-bottom: 0

.umc .umcLabelPane .umcTooltipIcon
	span.umcHelpIcon
		opacity: 0.6

	&:hover span.umcHelpIcon
		background-position: -60px -200px

	&:active span.umcHelpIcon
		background-position: -60px -200px
		opacity: 1

.umc .umcMultiInputDisabled .umcMultiInputContainer .umcMultiInputLastRowEntry
	padding-right: 0

.umc .umcLiveSearchSidebarRadioButtonGroup
	margin-top: 1.5em

.umc .umcProgressBar,
.umc .umcProgressInfo
	width: 400px
	min-height: 150px
	> *
		width: 100%

.umc .umcProgressDetails
	display: flex
	align-items: baseline

	.umcProgressPercentage
		color: var(--color-grey62);
		font-size: var(--font-size-small);
		margin-left: auto

.umc .umcProgressBar
	background-color: var(--color-grey0);
	border-radius: var(--border-radius-container);
	padding: 0 12px;
	overflow: visible

	.umcProgressBarComponent
		min-height: 60px
		font-size: var(--font-size-header2);
		font-weight: 600
		margin-bottom: 24px
		display: flex
		align-items: end

	.umcProgressBarMessage
		min-height: 80px
		font-size: var(--font-size-small);
		margin-top: 12px;
		color: var(--color-grey62);
